@model GP_MVC.ViewModels.SuperAdminHomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="br-pagebody">
    <div class="row row-sm">
        <div class="col-sm-4 col-xl-4 mb-3">
            <a asp-action="Index" asp-controller="PClass">
                <div class="bg-info rounded overflow-hidden">
                    <div class="pd-x-20 pd-t-20 d-flex align-items-center">
                        <i class="fas fa-chalkboard-teacher tx-60 lh-0 tx-white op-7"></i>
                        <div class="mg-r-20 content-center">
                            <p class="tx-20 tx-spacing-1 tx-mont tx-bold tx-uppercase tx-white-8 mg-b-10">Class</p>
                            <p class="tx-24 tx-white tx-lato tx-bold mg-b-0 lh-1">@Model.Classes.Count()</p>
                        </div>
                    </div>
                    <div id="ch1" class="ht-50 tr-y-1"></div>
                </div>
            </a>
        </div><!-- col-3 -->

        <div class="col-sm-4 col-xl-4 mb-3">
            <a asp-action="Index" asp-controller="Year">
                <div class="bg-info rounded overflow-hidden">
                    <div class="pd-x-20 pd-t-20 d-flex align-items-center">
                        <i class="fas fa-calendar-alt tx-60 lh-0 tx-white op-7"></i>
                        <div class="mg-r-20 content-center">
                            <p class="tx-20 tx-spacing-1 tx-mont tx-bold tx-uppercase tx-white-8 mg-b-10">Year</p>
                            <p class="tx-24 tx-white tx-lato tx-bold mg-b-0 lh-1">@Model.Years.Count()</p>
                        </div>
                    </div>
                    <div id="ch1" class="ht-50 tr-y-1"></div>
                </div>
            </a>
        </div><!-- col-3 -->
    </div><!-- row -->
</div><!-- br-pagebody -->


<style>
