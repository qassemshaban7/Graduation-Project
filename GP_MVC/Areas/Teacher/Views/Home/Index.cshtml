    }

    .fa-light {
        color: #3C3883 !重要;
    }

    .mb-3 {
        margin-bottom: 1rem !重要;
    }

    a:hover .bg-info {
        background-color: #3C3883 !重要;
    }

    .content-center {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
</style>
