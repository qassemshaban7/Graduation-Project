@model List<Attendence>

@{
    ViewData["Title"] = "Student Attendance";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Student Attendance</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #FFFFFF;
            color: #3C3883;
            margin: 0;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .header h2 {
                color: #6C63FF;
                border-bottom: 2px solid #6C63FF;
                padding-bottom: 10px;
                margin: 0;
            }

        .buttons {
            display: flex;
            gap: 10px;
        }

        .styled-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 18px;
            text-align: left;
            background-color: #FFFFFF;
            border: 1px solid #dddddd;
        }

            .styled-table thead tr {
                background-color: #6C63FF;
                color: #FFFFFF;
            }

            .styled-table th,
            .styled-table td {
                padding: 12px 15px;
                border: 1px solid #dddddd;
            }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

        .fa-file-alt {
            margin-right: 5px;
        }

        .btn-attendance-chart {
            background-color: #6C63FF;
            color: #FFFFFF;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            display: inline-flex;
            align-items: center;
        }

            .btn-attendance-chart:hover {
                background-color: #5a54d4;
            }

            .btn-attendance-chart i {
                margin-right: 5px;
            }

        .btn-download {
            background-color: #007bff;
            color: #FFFFFF;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            display: inline-flex;
            align-items: center;
        }

            .btn-download:hover {
                background-color: #0056b3;
            }

            .btn-download i {
                margin-right: 5px;
            }
    </style>
</head>
<body>

    <div class="header">
        <h2>@ViewBag.Stu.Name</h2>
        <div class="buttons">
            <a asp-action="Charts" asp-controller="Home" asp-route-id="@ViewBag.Stu.Id" class="btn-attendance-chart">
                <i class="fas fa-chart-line"></i> Attendance Flow Chart
            </a>
            <a asp-action="ExcelForOneStudent" asp-controller="Home" asp-route-id="@ViewBag.Stu.Id" class="btn-download">
                <i class="fas fa-file-alt"></i> Download report
            </a>
        </div>
    </div>

    <div class="table-container">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Date Day</th>
                    <th>Part One</th>
                    <th>Part Two</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attendance in Model)
                {
                    <tr>
                        <td>@attendance.Date_Day.ToShortDateString()</td>
                        <td>@attendance.PartOne</td>
                        <td>@attendance.PartTwo</td>
                        <td>@attendance.Total</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
