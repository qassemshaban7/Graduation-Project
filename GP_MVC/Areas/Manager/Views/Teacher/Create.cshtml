@model GP_MVC.ViewModels.AddTeacherVM

@{
    ViewData["Title"] = "Create Teacher";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="br-pagetitle">
    <h3 class="text-info mr-3">Add New Teacher</h3>
</div><!-- br-pagetitle -->

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <div class="row">
            <div class="col-xl-12">
                <div class="form-layout form-layout-4">
                    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Teacher">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <label class="col-sm-4 form-control-label">Name: <span class="tx-danger">*</span></label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Teacher Name" required>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div><!-- row -->

                        <div class="row mb-3">
                            <label class="col-sm-4 form-control-label">Email: <span class="tx-danger">*</span></label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" required>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div><!-- row -->

                        <div class="row mb-3">
                            <label class="col-sm-4 form-control-label">National Number: <span class="tx-danger">*</span></label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <input asp-for="NationalNum" type="number" class="form-control" placeholder="National Number" required>
                                <span class="text-danger" asp-validation-for="NationalNum"></span>
                            </div>
                        </div><!-- row -->

                        <div class="row mb-3">
                            <label class="col-sm-4 form-control-label">Subject: <span class="tx-danger">*</span></label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <select asp-for="SubjectName" class="form-control" asp-items="@((SelectList)ViewData["DefaultMateriales"])">
                                    <option value="">-- Select Subject --</option>
                                </select>
                                <span class="text-danger" asp-validation-for="SubjectName"></span>
                            </div>
                        </div><!-- row -->

                        <div class="row mb-3">
                            <label class="col-sm-4 form-control-label">Classes: <span class="tx-danger">*</span></label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <select asp-for="AssignClassId" class="form-control" asp-items="@((MultiSelectList)ViewData["PClasses"])" multiple="multiple">
                                    <option value="">-- Select Classes --</option>
                                </select>
                                <span class="text-danger" asp-validation-for="AssignClassId"></span>
                            </div>
                        </div><!-- row -->

                        <div class="row mb-3">
                            <label class="col-sm-4 form-control-label">Image: </label>
                            <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                                <input asp-for="Image" type="file" class="form-control-file">
                                <span class="text-danger" asp-validation-for="Image"></span>
                            </div>
                        </div><!-- row -->

                        <div class="form-layout-footer mg-t-30 text-center">
                            <input type="submit" value="Add" class="btn btn-info">
                            <a asp-action="Index" asp-controller="Teacher" class="btn btn-secondary">Back</a>
                        </div><!-- form-layout-footer -->
                    </form>
                </div><!-- form-layout -->
            </div>
        </div><!-- row -->
    </div><!-- br-section-wrapper -->
</div><!-- br-pagebody -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            var errorMessages = @Html.Raw(Json.Serialize(ViewBag.ErrorMessages ?? new List<string>()));
            if (errorMessages.length > 0) {
                alert(errorMessages.join('\n'));
            }
        });
    </script>
}
